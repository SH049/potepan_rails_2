.first-view {
    background-image: url("<%= asset_path('cover-lg.jpeg') %>");
    background-size: cover;
    height: 800px;
    text-align:center;
    position: relative;
}
.notice {
    position: absolute;
}
.alert {
    position: absolute;
}
.first-view h1 {
    color: white;
    font-size: 50px;
    display: inline-block;
    padding-top:100px;
    padding-left: auto;
    padding-right: auto;
}
.search-form {
    opacity: 0.8;
    width: fit-content;
    background-color: rgba( 255, 255, 255, 0.45 );
    margin-top: 200px;
    margin-left: auto;
    margin-right: auto;
}
.search-form-text {
    margin: 10px;
    width: 300px;
    height: 40px;
}
.search-form-button {
    margin: 10px;
    width: 300px;
    height: 40px;
}
.area-section {
    display: flex;
    flex-wrap: wrap;
    gap:10px;
    margin-top: 20px;
    justify-content: center;
}
.each-area{
    position: relative;
}
.each-area-image {
    border-radius: 10px;
    width: 300px;
    height: 400px;
}
.each-area-text {
    color: white;
    font-size: 25px;
    position:  absolute;
    left: 10px;
    bottom:10px;
}