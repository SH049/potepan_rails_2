<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
 
    <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="field">
        <%= f.label :profile %><br>
        <%= f.text_field :profile, autofocus: true, autocomplete: "profile" %>
    </div>
    
    <%= f.hidden_field :current_password, autocomplete: "current-password" %>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>