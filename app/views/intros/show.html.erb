<h1>プロフィール</h1>

<%= link_to "編集", "profile/edit" %>

<h3>ユーザー名</h3>
<%= @user.name %>
<h3>プロフィール</h3>
<%= @user.profile %>
<h3>アイコン</h3>
<% if @user.profile_image? %>
  <%= image_tag @user.profile_image.url, :size => '30x30' %>
<% else %>
  <%= image_tag ("default_icon.png"), :size => '30x30' %>
<% end %>