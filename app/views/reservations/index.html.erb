<div class="top-list">
<h3>一覧</h3>
</div>

<div>
    <% @reservations.each do |reservation| %>
        <div>
            <%= reservation&.checkin&.strftime('%Y/%m/%d') %>
            <%= reservation&.checkout&.strftime('%Y/%m/%d') %>
            <%= reservation.people %>
            <%= link_to "詳細はこちら", reservation %>
            <%= link_to "編集", edit_room_path(reservation) %>
            <%= link_to "削除", reservation, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </div>
    <% end %>
</div>

<p><%= link_to "新規追加", new_reservation_path, class:"link" %></p>