<div class="top-list">
<h3>一覧</h3>
</div>

<div>
    <% @reservations.each do |reservation| %>
        <tr>
            <th>チェックイン</th>
            <td>
            <%= reservation&.checkin&.strftime('%Y/%m/%d') %>
            </td>
            <th>チェックアウト</th>
            <td>
            <%= reservation&.checkout&.strftime('%Y/%m/%d') %>
            </td>
            <th>宿泊人数</th>
            <td>
            <%= reservation.people %>
            </td>
            <th>合計金額</th>
            <td>
            ¥<%= (reservation.room.room_fee * reservation.people * (reservation&.checkout - reservation&.checkin).to_i).to_s(:delimited) %>
            </td>
            <th>部屋番号</th>
            <td>
                <%= reservation.room_id %></p>
            </td>
            <th>画像</th>
            <td>
                <% if reservation.room.room_image? %>
                <%= image_tag reservation.room.room_image.url, :size => '50x40' %>
                    <% else %>
                <%= image_tag ("default_room.png"), :size => '50x40' %>
                    <% end %>
            </td>
            <th>予約確定日時</th>
            <td>
                <%= reservation&.created_at&.strftime('%Y/%m/%d') %></p>
            </td>
            <td><%= link_to "詳細はこちら", reservation %></td>
            <td><%= link_to "編集", edit_reservation_path(reservation) %></td>
            <td><%= link_to "削除", reservation, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
        </tr>
    <% end %>
</div>

<p><%= link_to "新規追加", new_reservation_path, class:"link" %></p>