<div class="top-list">
<h3 class="back">登録済み一覧</h3>
</div>
<table class="table-own">
    <thead>
        <tr>
            <th>画像</th>
            <th>施設名</th>
            <th>紹介文</th>
            <th>料金</th>
            <th>作成日</th>
            <th>編集</th>
        </tr>
    </thead>
    <tbody>
        <% @rooms.each do |room| %>
        <tr>
            <td>
                <% if room.room_image? %>
                    <%= image_tag room.room_image.url, class:'room-own-image' %>
                <% else %>
                    <%= image_tag ("default_room.png"), class:'room-own-image' %>
                <% end %>
            </td>
            <td>
                <%= room.room_name %>
            </td>
            <td>
                <%= room.room_detail %>
            </td>
            <td>
                ¥<%= room.room_fee.to_s(:delimited)  %>~
            </td>
            <td>
                <%= room&.created_at&.strftime('%Y/%m/%d')%>
            </td>

            <td class="edit-dot-potision">
                <div class="editDotToggle" data-room-id="<%= room.id %>">
                    <%= image_tag 'three-dot-menu.png', class:"editDotIcon" %>
                </div>
                <div class="editDot" id="editDotRoom<%= room.id %>">
                    <p><%= link_to "編集", edit_room_path(room),class:"header-link" %></p>
                    <p><%= link_to "施設を削除", room, method: :delete, class:"red header-link", data: { confirm: "本当に削除しますか？" } %></p>
                </div>
            </td>
        </tr>
        <% end  %>
    </tbody>
</table>