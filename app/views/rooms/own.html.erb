<div class="top-list">
<h3>登録済み一覧</h3>
</div>
<div>
    <table>
        <thead>
            <tr>
                <th>画像</th>
                <th>施設名</th>
                <th>紹介文</th>
                <th>料金</th>
                <th>作成日</th>
                <th>料金</th>
            </tr>
        </thead>
        <tbody>
            <% @rooms.each do |room| %>
            <tr>
                <td>
                    <% if room.room_image? %>
                        <%= image_tag room.room_image.url, class:'room-own-image' %>
                    <% else %>
                        <%= image_tag ("default_room.png"), class:'room-own-image' %>
                    <% end %>
                </td>
                <td>
                    <%= room.room_name %>
                </td>
                <td>
                    <%= room.room_detail %>
                </td>
                <td>
                    ¥<%= room.room_fee.to_s(:delimited)  %>~
                </td>
                <td>
                    <%= room&.created_at&.strftime('%Y/%m/%d')%>
                </td>
                <td>
                    <%= link_to "編集", edit_room_path(room)  %>
                </td>
                <td>
                    <%= link_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" } %> 
                </td>
            </tr>
            <% end  %>
        </tbody>
    </table>
</div>